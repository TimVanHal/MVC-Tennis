@model Tennis.NET.Models.Division

@{
    ViewBag.Title = "Details divisie";
}

<h2>Details</h2>

<div>
    <h4>Divisie</h4>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TeamPlayers)
        </dt>

        <dd>
            @foreach (var tp in Model.TeamPlayers)
            {
                @Html.Label(tp.Player.FullName)
                @Html.Raw(" speelt voor \"")
                @Html.Label(tp.Team.Name)
                @Html.Raw("\"")
                <br/>
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Bewerken", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Terug naar lijst", "Index")
</p>
