@model IEnumerable<Tennis.NET.Models.Player>

@{
    ViewBag.Title = "Spelers";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nieuwe speler aanmaken", "Create")
</p>
<table class="display" id="indexTbl">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlayerNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FederationNr)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PlayerNr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FederationNr)
                </td>
                <td>
                    @Html.ActionLink("Bewerken", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Verwijderen", "Delete", new { id=item.Id }) |
                    @Html.ActionLink("Boetes", "Index", "Fine", new { playerId=item.Id}, null) |
                    @Html.ActionLink("Rollen", "Index", "Role", new { playerId=item.Id}, null) |
                    @Html.ActionLink("Activiteit", "Index", "TeamPlayer", new { playerId=item.Id}, null)
                </td>
            </tr>
        }
    </tbody>

</table>

@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    <script>
        var table = $('#indexTbl').DataTable({ "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.12/i18n/Dutch.json" } });
    </script>
}