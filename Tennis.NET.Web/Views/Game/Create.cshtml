@model Tennis.NET.Models.Game

@{
    ViewBag.Title = "Nieuwe wedstrijd aanmaken";
}

<h2>Nieuw</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Wedstrijd</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Player1Id, "Naam speler 1", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(g => g.Player1Id, (IEnumerable<SelectListItem>)ViewBag.P1Id, "Selecteer speler 1", new { @class = "chosen-select"})
                @Html.ValidationMessageFor(model => model.Player1Id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Player2Id, "Naam speler 2", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(g => g.Player2Id, (IEnumerable<SelectListItem>)ViewBag.P2Id, "Selecteer speler 2", new { @class = "chosen-select" })
                @Html.ValidationMessageFor(model => model.Player2Id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Player1Score, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Player1Score)
                @Html.ValidationMessageFor(model => model.Player1Score)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Player2Score, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Player2Score)
                @Html.ValidationMessageFor(model => model.Player2Score)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Opslaan" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Terug naar lijst", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval", "~/bundles/chosen")
    <script type="text/javascript">
        $(".chosen-select").chosen({ width: "250px" })
    </script>

}
